<div class="body">
	<div class="container">
		<p class="notice"><%= notice %></p>
		<div class="row">
			<div class="col-xs-6">
				<h1>Editing Book</h1>

				<%= form_for(@book) do |f| %>
				<% if @book.errors.any? %>
					<h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
					<ul>
						<% @book.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				<% end %>

				<h4>Title</h4>
				<%= f.text_field :title %>

				<h4>Body</h4>
				<%= f.text_area :body %>

				<br><%= f.submit "Update Book" %></br>

				<% end %>


				<p>
				<%= link_to "Show", book_path(@book) %>
				|
				<%= link_to "Back", books_path(@books) %>
				</p>
			</div>
		</div>
	</div>
</div>