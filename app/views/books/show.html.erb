<div class="body">
	<div class="container">
		<p class="notice"><%= notice %></p>
		<div class="row">
			<div class="col-lg-3">
				<h2>User info</h2>
				<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
				<table class="table">
					<tbody>
						<tr>
							<th>name</th>
							<th><%= @user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @user.introduction %></th>
						</tr>
					</tbody>
				</table>
				<div class="row">
					<% if @user.id == current_user.id %>
					<%= link_to edit_user_path(@user) do %>
					<button class="btn btn-default">
						<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
					</button>
					<% end %>
					<% end %>
				</div>

				<h2>New book</h2>

				<%= form_for(@book) do |f| %>
				<% if @book.errors.any? %>
				<h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
				<ul>
					<% @book.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<% end %>
				</ul>
					<% end %>

				<h4></h4>

				<h4>Title</h4>
				<%= f.text_field :title %>
				<h4>Opinion</h4>
				<%= f.text_area :body %>

				<br><%= f.submit "Create Book" %></br>
				<% end %>
			</div>
			<div class="col-lg-9">
				<h2>Book detail</h2>
				<table class="table">
					<tbody>
						<tr>
							<td>
								<%= link_to @book.user do %>
								<%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %><br>
								<%= @user.name %>
								<% end %>
							</td>
							<td><%= link_to @book.title, book_path(@book) %></td>
							<td><%= @book.body %></td>
							<td><%= link_to "Edit", edit_book_path(@book) %></td>
							<td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?" %></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>